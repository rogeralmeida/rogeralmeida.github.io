!!!
%html{"en-us" => "", :lang => "{{ site.lang | default: en-us}}"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1, maximum-scale=1", :name => "viewport"}
    %link{rel: "stylesheet", href: "https://use.fontawesome.com/releases/v5.7.2/css/all.css", integrity: "sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr", crossorigin: "anonymous"}
    %link{href: '/assets/css/style.css', :media => "screen", :rel => "stylesheet", :type => "text/css"}
    %link{href: '/assets/css/print.css', :media => "print", :rel => "stylesheet", :type => "text/css"}
    /[if lt IE 9]
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    :css
      body {
        font-size: 20px;
        font-family: 'Open Sans', sans-serif;
      }
      pre code {
        background-color: #f8f8f8;
      }
      aside#sidebar {
        padding-left: 35px;
        font-size: 20px;
      }

      aside#sidebar h4:before {
        content: '//';
        margin-left: -0.8em;
      }
      .btn-primary {
        color: #fff;
        background-color: #337ab7;
        border-color: #2e6da4;
      }

      .btn {
        display: inline-block;
        margin-bottom: 0;
        font-weight: 400;
        text-align: center;
        white-space: nowrap;
        vertical-align: middle;
        -ms-touch-action: manipulation;
        touch-action: manipulation;
        cursor: pointer;
        background-image: none;
        border: 1px solid transparent;
        padding: 6px 12px;
        font-size: 14px;
        line-height: 1.42857143;
        border-radius: 4px;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
      }

      .top-banner-image {
        opacity: 0.9;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
      }

  %body
    = "{% seo %}"
    %header
      .inner
        %a{:href => "/"}
          %h1
            = "{{ site.title | default: site.github.repository_name }}"
        %h2
          = "{{ site.description }}"
        = "{% if site.github.is_project_page %}"
        %a.button{:href => "{{ site.github.repository_url }}"}
          %small View project on
          GitHub
        = "{% endif %}"
        {% if site.github.is_user_page %}
        %a.button{:href => "{{ site.github.owner_url }}"}
          %small Follow me on
          GitHub
        {% endif %}
    #content-wrapper
      .inner.clearfix
        %section#main-content
          {{ content }}
        %aside#sidebar
          {% haml menu.haml %}
          %p
            This page was generated by
            = succeed "." do
              %a{:href => "https://pages.github.com"} GitHub Pages
    {% if site.google_analytics %}
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', '{{ site.google_analytics }}', 'auto');
      ga('send', 'pageview');
    {% endif %}
    %script{src: "/assets/js/mermaid.min.js"}
      :javascript
        mermaid.initialize({startOnLoad:true});
