!!!
%html{lang: "{{ page.lang | default: site.lang | default: 'en' }}", dir: "ltr"}

  = "{% include head.html %}"

  %body
    #fb-root
    :javascript
      (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.8";
        fjs.parentNode.insertBefore(js, fjs);
       }(document, 'script', 'facebook-jssdk'));
    %div.container
      .row
        .col-md-9
          %main.page-content{aria: {label: "Content"}}
            %div.wrapper
              = "{{ content }}"
        .col-md-3
          = "{% haml menu.haml %}"

    :javascript
      (function(i,s,o,g,r,a,m){
        i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)
        },i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-99688757-1', 'auto');
      ga('send', 'pageview');
    %script{type:"text/javascript", src:"/assets/js/social-share-kit.min.js"}
    %script{type:"text/javascript", src:"/javascripts/Imager.min.js"}
    :javascript
      SocialShareKit.init({
        url: '{{ site.url }}{{ page.url }}',
        text: ''
      });
      new Imager({ availableWidths: [1024, 768, 640, 480, 240] });
