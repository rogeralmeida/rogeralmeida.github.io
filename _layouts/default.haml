!!!
%html{"en-us" => "", :lang => "{{ site.lang | default: en-us}}"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1, maximum-scale=1", :name => "viewport"}/
    %link{href: '/assets/css/style.css', :media => "screen", :rel => "stylesheet", :type => "text/css"}
    %link{href: '/assets/css/print.css', :media => "print", :rel => "stylesheet", :type => "text/css"}
    /[if lt IE 9]
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    :css
      body {
        font-size: 20px;
      }
      pre code {
        background-color: #f8f8f8;
      }
      aside#sidebar {
        padding-left: 35px;
        font-size: 20px;
      }

      aside#sidebar h4:before {
        content: '//';
        margin-left: -0.8em;
      }
  %body
    = "{% seo %}"
    %header
      .inner
        %a{:href => "{{ '/' | absolute_url }}"}
          %h1 {{ site.title | default: site.github.repository_name }}
        %h2 {{ site.description | default: site.github.project_tagline }}
        {% if site.github.is_project_page %}
        %a.button{:href => "{{ site.github.repository_url }}"}
          %small View project on
          GitHub
        {% endif %}
        {% if site.github.is_user_page %}
        %a.button{:href => "{{ site.github.owner_url }}"}
          %small Follow me on
          GitHub
        {% endif %}
    #content-wrapper
      .inner.clearfix
        %section#main-content
          {{ content }}
        %aside#sidebar
          {% haml menu.haml %}
          %p
            This page was generated by
            = succeed "." do
              %a{:href => "https://pages.github.com"} GitHub Pages
    {% if site.google_analytics %}
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', '{{ site.google_analytics }}', 'auto');
      ga('send', 'pageview');
    {% endif %}
